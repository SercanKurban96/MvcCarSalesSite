@model MvcCarSalesSite.Models.Advert

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h3>Bu ilanı silmek istediğinizden emin misiniz?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                İlan No
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AdvertNo)
            </dd>

            <dt>
                Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Fiyat
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                Tarih
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AdvertDate)
            </dd>

            <dt>
                Kilometre
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kilometer)
            </dd>

            <dt>
                Model Yılı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModelYear)
            </dd>

            <dt>
                Yakıt Türü
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FuelType)
            </dd>

            <dt>
                Vites Türü
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GearType)
            </dd>

            <dt>
                Telefon
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Sil</button>
        <a href="/Advert/Index/" class="btn btn-outline-warning"><i class="bi bi-file-earmark"></i> İlan Listesi</a>
    </div>
        }
    </div>
</div>


